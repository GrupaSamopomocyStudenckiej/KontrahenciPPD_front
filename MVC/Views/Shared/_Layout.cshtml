<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top dark">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("EMTS", "Index", "Firmy", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Zarządzanie kontrahentami", "Index", "Firmy")</li>
                    <li>@Html.ActionLink("Zarządzanie pracownikami", "Index", "Pracownicy")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Basara Latos Ożóg Wiktor</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/alertify.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

<style>

    footer {
        margin-top: 20px;
    }
    @@media only screen and (max-width: 767px) {

        .nav {
            display: grid;
            margin: 0;
        }
    }

    .navbar-inverse .navbar-nav > li > a {
        color: rgb(248,248,255);
    }

        .navbar-inverse .navbar-nav > li > a:hover {
            color: goldenrod;
        }
</style>
